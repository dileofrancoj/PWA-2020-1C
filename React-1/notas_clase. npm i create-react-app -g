const App = () => {
  // JSX
  // Antes del return es un buen lugar para poner logica.

  const nombre = "Franco";
  const nickname = "Frantuko";
  const edad = 26;
  const casado = false ? "Si" : "No";
  const mascotas = [
    { id: 1, nombre: "Amazonas", tipo: "ğŸ¶" },
    { id: 2, nombre: "chiguire", tipo: "ğŸ­" },
    { id: 3, nombre: "Puchi", tipo: "ğŸ•" },
  ];
  return (
    <div>
      <h4>Nombre : {nombre}</h4>
      <h4>Nickname : {nickname}</h4>
      <h4>Edad : {edad}</h4>
      <h4>Casado : {casado}</h4>
      <h5>Expresion {10 + 15}</h5>
      <ul>
        {mascotas.map(({ id, nombre, tipo }) => (
          <li key={id}>
            {nombre} {tipo}
          </li>
        ))}
      </ul>
    </div>
  );
};

